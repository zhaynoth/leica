<div class="row-fluid">
<div class="box">
<div class="modal login">
  <div class="box-header red-background">
      <div class="title">Log in</div>
  </div>
  <div class="box-content">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-login">
          <div class="control-group">
                  <%= f.label :email, "E-mail", :class => 'control-label' %>
              <div class="controls">
                  <div class="input-prepend input-append">
                      <span class="add-on"><div class="icon-user"></div></span>
                      <%= f.email_field :email, autofocus: true %>
                  </div>
              </div>
          </div>
          <div class="control-group">
                  <%= f.label :password %>
              <div class="controls">

                  <div class="input-prepend input-append">
                      <span class="add-on"><div class="icon-lock"></div></span>
                      <%= f.password_field :password, autocomplete: "off" %>
                  </div>                      
              </div>
          </div>

          <% if devise_mapping.rememberable? -%>
          <div class="control-group">
              <div class="controls">
                <label class="checkbox">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </label>
              </div>
          </div>
          <% end -%>
          
          <p class="notice-login notice"> <%= notice %></p>
          <p class="notice-login alert"> <%= alert %></p>  
        </div>

          <div class="form-actions">
            <div class="actions" align="center" >
                 <%= f.submit "Log in", :class=> 'btn btn-primary' %>
            </div>
          </div>
      <% end %>
      <% render "devise/shared/links" %>
  </div>
</div>
</div>
</div>



                    
