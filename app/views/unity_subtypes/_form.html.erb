<div class="row-fluid out-margin">
<div class="span12">
<div class="box-content box-double-padding">
<%= form_for(@unity_subtype) do |f| %>                        
    <fieldset>
        <div class="span4 box">
            <div class="lead">
                <i class="icon-rocket text-contrast"></i>
                Category / Model info
            </div>
            <small class="muted">Registre un <strong>Modelo</strong> para los equipos de campo, o una <strong>Categoría</strong> para los equipos de software. </small>
        </div>
        <div class="span7 offset1">
          <div class="span12">
              <div class="control-group">
                  <label class="control-label">Nombre</label>
                  <div class="controls">
                    <%= f.text_field :subtype, required: true, :class => 'span12' %>                   
                  </div>
              </div>
              <div class="control-group">
                  <label class="control-label">Tipo</label>
                  <div class="controls">
                    <%= f.collection_select(:unity_types_id, $unity_types, :id, :type_name, {}, 
                        {:class => "span12"}) %>
                  </div>
              </div>
          </div>
        </div>
    </fieldset>                      

    <div class="form-actions" style="margin-bottom: 0;">
        <div class="span7">
            <% if notice != nil %>
                <div id="notice" class="alert alert-success">
                <a href="#" class="close" data-dismiss="alert">×</a>
                <i class="icon-ok-sign"></i>
                <%= notice %>
                </div>            
            <% end  %> 

            <% if @unity_subtype.errors.any? %>
              <div id="error_explanation" class="alert alert-success">
                <h2><%= pluralize(@unity_subtype.errors.count, "error") %> prohibited this unity_subtype from being saved:</h2>

                <ul>
                <% @unity_subtype.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
                </ul>
              </div>
            <% end %>
        </div>
        <div class="span4">
            <div class="text-right">
                <%= f.submit "Save", :class => 'btn btn-primary btn-large' %>
            </div>
        </div>
    </div>
<% end %>
</div>
</div> 
</div>